<div class="page">
  <div class="form">
    <%= simple_form_for(@list) do |f| %>
      <div class="title">
        <h2>Add a new movie list</h2>
      </div>
      <div class="form-inputs">
        <%= f.input :name %>
      </div>
      <div class="form-actions">
        <%= f.submit class:"btn" %>
      </div>
    <% end %>
  </div>
</div>
