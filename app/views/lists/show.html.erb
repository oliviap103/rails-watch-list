<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1489599849927-2ee91cede3ba?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2070&q=80);">
  <div class="container">
    <h1><%= @list.name %></h1>
    <%= link_to "Add a movie", new_list_bookmark_path(@list), class:'btn btn-flat text-decoration-none'%>
  </div>
</div>

<% @list.bookmarks.each do |bm| %>
    <div class="card-product">
      <div class="card-product-infos">
        <h2><%= bm.movie.title %></h2>
        <p><%= bm.movie.overview %></p>
        <p><em><%= bm.comment %></em></p>
        <%= link_to '<i class="fa-solid fa-trash"></i>'.html_safe, bookmark_path(bm), data: {turbo_method: :delete} %>
      </div>
    </div>
<% end %>
