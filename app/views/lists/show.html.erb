<div class="banner">
    <h1><%= @list.name %></h1>
    <%= link_to "Add A Movie", new_list_bookmark_path(@list), class:'btn-w'%>
    <%= link_to "Back To All Lists", lists_path, class:'btn-w'%>
    <%= link_to "Delete This List", list_path(@list), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this list?" }, class: "btn-w" %>
</div>

<div class="card-container">
  <div class="bm-cards">
    <% @list.bookmarks.each do |bm| %>
      <div class="bm-card">
        <%= image_tag "#{bm.movie.poster_url}"%>
        <div class="bm-info">
          <h2><%= bm.movie.title %></h2>
           <p><%= bm.movie.overview %></p>
           <p><em><%= bm.comment %></em></p>
           <p>
              <% bm.stars.to_i.times do %>
                <i class="fa-solid fa-star"></i>
              <% end %>
           </p>
        </div>
        <i class='fa-solid fa-trash'></i>
        <%= link_to "delete", bookmark_path(bm), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this movie?" } %>
      </div>
    <% end %>
  </div>
</div>

